<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/large_dimen"
    android:paddingRight="@dimen/large_dimen"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="○○チームの勝利！"
            android:id="@+id/resultText"
            android:textSize="@dimen/large_text"
            android:layout_marginBottom="@dimen/large_dimen"
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/red"
                android:layout_marginRight="@dimen/large_dimen"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <ImageView
                android:id="@+id/blue"
                android:layout_marginLeft="@dimen/large_dimen"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/gauge"
            android:layout_marginTop="@dimen/large_dimen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/returnButton"
            android:background="#ecf0f1"
            android:text="タイトルに戻る"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
</FrameLayout>